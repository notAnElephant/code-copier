{
  "name": "code-copier",
  "version": "1.0.2",
  "description": "Code Copier - Chrome Extension to copy contents inside <pre> and <code> tags",
  "private": true,
  "author": "Ice Lam",
  "license": "ISC",
  "scripts": {
    "clean": "rimraf ./dist",
    "dev:files": "cpx \"./src/**/*.{html,json}\" ./dist --watch --verbose",
    "dev:images": "cpx \"./src/assets/images/**/*\" ./dist/assets/images --watch --verbose",
    "dev:js": "gulp dev-js",
    "dev:build-css": "sass --no-source-map src/assets/css:dist/assets/css --load-path=node_modules",
    "dev:watch-css": "sass --watch src/assets/css:dist/assets/css --load-path=node_modules",
    "dev:css": "npm-run-all dev:build-css dev:watch-css",
    "dev": "npm-run-all --parallel clean dev:js dev:css dev:files dev:images",
    "build:files": "run-s build:manifest build:html build:json",
    "build:manifest": "cpx \"./src/manifest.json\" ./dist",
    "build:html": "cpx \"./src/**/*.html\" ./dist",
    "build:json": "cpx \"./src/**/*.json\" ./dist",
    "build:images": "cpx \"./src/assets/images/**/*\" ./dist/assets/images",
    "build:js": "gulp build-js",
    "build:css": "sass --style=compressed --no-source-map src/assets/css:dist/assets/css --load-path=node_modules",
    "build": "npm-run-all clean build:js build:css build:files build:images",
    "pack": "npm-run-all build pack:zip",
    "pack:zip": "cd ./dist && zip -r -FS ../app/code-copier.zip *"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/register": "^7.6.2",
    "babel-plugin-transform-vue-template": "^0.4.2",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "concurrently": "^5.0.0",
    "copyfiles": "^2.4.1",
    "cpx": "^1.5.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-import": "^2.16.0",
    "event-stream": "^4.0.1",
    "gulp": "^4.0.2",
    "gulp-load-plugins": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "sass": "^1.85.1",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "vue-template-compiler": "^2.6.11",
    "watchify": "^3.11.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.6.3",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify": "^3.0.2",
    "simplebar-vue": "^1.3.4",
    "vue": "^2.6.11",
    "webextension-polyfill": "^0.5.0"
  }
}
